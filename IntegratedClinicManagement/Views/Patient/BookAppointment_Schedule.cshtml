@model IEnumerable<ClinicManagementProject.Models.DoctorSchedule>

@{Layout = "~/views/Patient/_PatientLayout.cshtml";}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BookAppointment_Schedule</title>
</head>
<body>

    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Doctor.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>

    <td>
        @ViewData["DocName"]
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>

    <td>
        @Html.ActionLink("Book", "BookSlotForPatient", new { timeid = item.Timeslot_Id, docid = item.Doctor_Id })

    </td>
</tr>
       }
        </tbody>
    </table>
    <section>
        @Html.ActionLink("Return to Main Page", "PatientConsole", "Patient")
    </section>
</body>
</html>
